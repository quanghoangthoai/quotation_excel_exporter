// themeERP/public/js/sidebar_override.js
frappe.ready(function() {
    // delay để sidebar render xong
    setTimeout(function() {
        // bung tất cả collapse panels
        $('.sidebar-menu .collapse').addClass('show');
        // cập nhật aria-expanded để icon mũi tên chuyển hướng xuống
        $('.sidebar-menu .module-link').attr('aria-expanded', 'true');
        // nếu có cấu trúc cây thì cũng bung
        $('.sidebar-menu .tree').addClass('show');
    }, 700);
});
